<!DOCTYPE html>
<html lang="ru"> <!-- Изменено на русский язык -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Кредитное приложение</title> <!-- Изменено название приложения -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcCreditApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Кредитное приложение</a> <!-- Изменено название -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Старое меню (закомментировано для истории) -->
                    <!--
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    -->

                    <!-- Новое меню согласно заданию 10 -->
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("Главная", "Index", "Home", null, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Послать заявку", "CreateBid", "Home", null, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Просмотреть заявки", "Index", "Bids", null, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Кредиты", "Index", "Credits", null, new { @class = "nav-link text-dark" })</li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Кредитное приложение - <a asp-area="" asp-controller="Home" asp-action="Privacy">Конфиденциальность</a> <!-- Изменено название и перевод -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>