@model StudentPerformanceSystem.Models.Student

@{
    ViewData["Title"] = "Добавление нового студента";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row"> <!--  строка в сетке Bootstrap -->
    <div class="col-md-6">  <!-- Колонка шириной 6 колонок (половина экрана) на средних устройствах и выше -->
        <form asp-action="Create">  <!-- Форма, которая будет отправлена на действие Create контроллера -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Блок для отображения ОБЩИХ ошибок валидации модели (но не для отдельных полей) -->

            <div class="form-group"> <!-- Группа элементов формы (Bootstrap-стиль) -->
                <label asp-for="LastName" class="control-label"></label>   <!-- Лейбл для поля LastName. Текст берется из атрибутов модели (Display.Name) -->
                <input asp-for="LastName" class="form-control" />   <!-- Input для LastName. Автоматически устанавливает type="text", name и id -->
                <span asp-validation-for="LastName" class="text-danger"></span> <!-- Блок для отображения ошибок валидации КОНКРЕТНО для LastName -->
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Group" class="control-label"></label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TaskPoints" class="control-label"></label>
                <input asp-for="TaskPoints" class="form-control" />
                <span asp-validation-for="TaskPoints" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TestPoints" class="control-label"></label>
                <input asp-for="TestPoints" class="form-control" />
                <span asp-validation-for="TestPoints" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExamPoints" class="control-label"></label>
                <input asp-for="ExamPoints" class="form-control" />
                <span asp-validation-for="ExamPoints" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}