@model StudentPerformanceSystem.Models.Student

@{
    ViewData["Title"] = "Подробности о студенте";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskPoints)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPoints)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExamPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExamPoints)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPoints)
        </dt>
        <dd class="col-sm-10">
            <strong>@Html.DisplayFor(model => model.TotalPoints)</strong>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>