@model IEnumerable<MvcCreditApp.Models.Bid>

@{
    ViewData["Title"] = "Список заявок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список заявок</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новую заявку</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bidDate)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.CreditHead)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.bidDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BidId" class="btn btn-sm btn-outline-primary">Изменить</a> 
                        <a asp-action="Details" asp-route-id="@item.BidId" class="btn btn-sm btn-outline-info">Подробнее</a> 
                        <a asp-action="Delete" asp-route-id="@item.BidId" class="btn btn-sm btn-outline-danger">Удалить</a>
                    </td>
                </tr>
        }
    </tbody>
</table>